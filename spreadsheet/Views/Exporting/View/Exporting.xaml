<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    x:Class="syncfusion.spreadsheetdemos.wpf.ExportingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.spreadsheetdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <democommon:DemoControl.Resources>
        <local:BoolToOptionsConverter x:Key="OptionsConverter" />
    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="78*" />
            <ColumnDefinition Width="22*" />
        </Grid.ColumnDefinitions>

        <!--  GridView  -->
        <Border Grid.Column="0">
            <syncfusion:SfSpreadsheet Name="spreadsheetControl" FormulaBarVisibility="Collapsed">
                <Interactivity:Interaction.Behaviors>
                    <local:FileImportBehavior FileName="Export.xlsx" />
                </Interactivity:Interaction.Behaviors>
            </syncfusion:SfSpreadsheet>
        </Border>

        <!--  UserOptions  -->
        <Border Grid.Column="1">
            <ItemsControl>
                <Label
                            Name="label1"
                            Canvas.Left="10"
                            Canvas.Top="10"
                            Height="30"
                            Content="Exporting Options"
                            FontSize="15"
                            FontWeight="Bold" />

                <!--<Border
                            Name="border2"
                            Width="130"
                            Height="3"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Background="#FF119EDA"
                            BorderBrush="#FF119EDA"
                            BorderThickness="1" />-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox
                                Margin="15,5,15,0"
                                VerticalAlignment="Bottom"
                                Header="">
                        <StackPanel Orientation="Vertical">
                            <RadioButton
                                        Name="htmlRadioBtn"
                                        Margin="10,10,0,0"
                                        VerticalContentAlignment="Center"
                                        GroupName="Group1"
                                        IsChecked="True">
                                Export to HTML
                            </RadioButton>
                            <RadioButton
                                        Name="imageRadioBtn"
                                        Margin="10,10,0,0"
                                        VerticalContentAlignment="Center"
                                        GroupName="Group1">
                                Export to Image
                            </RadioButton>
                            <RadioButton
                                        Name="pdfRadioBtn"
                                        Margin="10,10,0,5"
                                        VerticalContentAlignment="Center"
                                        GroupName="Group1">
                                Export to PDF
                            </RadioButton>

                        </StackPanel>
                    </GroupBox>
                    <Button
                                Grid.Row="1"
                                Height="30"
                                Margin="15,10,15,0"
                                Command="local:ExportCommand.Export"
                                CommandTarget="{Binding ElementName=spreadsheetControl}"
                                Content="Export">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource OptionsConverter}">
                                <Binding ElementName="htmlRadioBtn" Path="IsChecked" />
                                <Binding ElementName="imageRadioBtn" Path="IsChecked" />
                                <Binding ElementName="pdfRadioBtn" Path="IsChecked" />

                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                </Grid>
            </ItemsControl>
        </Border>
    </Grid>
</democommon:DemoControl>
