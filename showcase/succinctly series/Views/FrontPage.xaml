<Page
    x:Class="syncfusion.succinctlyseries.wpf.FrontPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:succinctly="clr-namespace:syncfusion.succinctlyseries.wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d">
    <Page.DataContext>
        <succinctly:ViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid Margin="10">
                <syncfusion:Carousel
                    Name="carousel1"
                    Margin="0,-150,0,-10"
                    EnableTouch="True"
                    ForceCursor="True"
                    ItemsPerPage="1"
                    ItemsSource="{Binding Books}"
                    RadiusX="500"
                    RadiusY="0"
                    RotationSpeed="250"
                    ScaleFraction="100"
                    SelectedIndex="{Binding SelectedBookIndex}">
                    <syncfusion:Carousel.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="White">
                                <Image
                                    Height="450"
                                    Margin="5"
                                    Source="{Binding Image}"
                                    Stretch="Uniform" />
                                <Button
                                    Margin="0,220,0,0"
                                    Padding="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="2"
                                    Content="READ NOW"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    TouchDown="ReadButton_TouchDown"
                                    Command="{Binding ReadCommand}"
                                    Visibility="{Binding ReadVisibility, Mode=TwoWay}" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:Carousel.ItemTemplate>
                </syncfusion:Carousel>
            </Grid>
        </Grid>
    </Grid>
</Page>
