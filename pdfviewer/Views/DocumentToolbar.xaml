                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                 />
        </Button>
        <Rectangle
            Width="1.6"
            Height="21.599"
            Margin="4,0,4,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.338,0.5" EndPoint="0.662,0.5">
                    <GradientStop Offset="0.508" Color="#FFBCBCBC" />
                    <GradientStop Offset="0.525" Color="White" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Name="btnPrint"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            IsEnabled="True"
            ToolTip="Click to Print the PDF Document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M4.0,11 L4.0,15 10.0,15 10.0,11 z M2.5,8.0 C2.8,8.0 3.0,8.2 3.0,8.5 3.0,8.8 2.8,9.0 2.5,9.0 2.2,9.0 2.0,8.8 2.0,8.5 2.0,8.2 2.2,8.0 2.5,8.0 z M1,7.0 L1,12.0 3.0,12.0 3.0,10 11.0,10 11.0,12.0 13,12.0 13,7.0 11.0,7.0 3.0,7.0 z M4.0,1 L4.0,6.0 10.0,6.0 10.0,1 z M3.0,0 L11.0,0 11.0,6.0 14,6.0 14,13.0 11.0,13.0 11.0,16 3.0,16 3.0,13.0 0,13.0 0,6.0 3.0,6.0 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                 />
        </Button>
        <Rectangle
            Width="1.6"
            Height="21.599"
            Margin="4,0,4,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.338,0.5" EndPoint="0.662,0.5">
                    <GradientStop Offset="0.508" Color="#FFBCBCBC" />
                    <GradientStop Offset="0.525" Color="White" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Name="btnGoToFirstPage"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            Background="Transparent"
            BorderBrush="Transparent"
            Effect="{x:Null}"
            BorderThickness="0"
            IsEnabled="False"
            ToolTip="Click to goto the first page in the PDF Document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M0,0.01300294 L1.0000002,0.01300294 1.0000002,16.013003 0,16.013003 z M11.278009,0 L11.972009,0.72000102 4.4380183,7.9909952 11.99801,15.286999 11.30401,16.007 2.9970098,7.9909952 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <Button
            Name="btnGoToPreviousPage"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            Background="Transparent"
            BorderBrush="Transparent"
            IsEnabled="False"
            BorderThickness="0"
            ToolTip="Click to goto the previous page in the PDF Document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M7.3199828,0 L8.0119999,0.72200069 1.4449779,7.0109903 7.9879826,13.278008 7.2970031,14.001 0,7.0109903 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <TextBox
            Name="txtCurrentPageIndex"
            Width="30"
            Height="18"
            Margin="4,0,4,0"
            HorizontalContentAlignment="Center" />
        <TextBlock
            Margin="2,0,2,0"
            VerticalAlignment="Center"
            FontFamily="Segoe UI"
            FontSize="9pt"
            Text="/" />
        <TextBlock
            Name="lblTotalPageCount"
            Margin="4,0,4,0"
            VerticalAlignment="Center"
            FontFamily="Segoe UI"
            FontSize="9pt"
            Text="100" />
        <Button
            Name="btnGoToNextPage"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            IsEnabled="True"
            ToolTip="Click to goto the next page in the PDF Document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M0.6929932,0 L8.0000001,7.0109903 0.71600357,14.001 0.02398695,13.279 6.5559998,7.0109903 0,0.72099343 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <Button
            Name="btnGoToLastPage"
            Width="24"
            Height="24"
            BorderThickness="0"
            Margin="4,0,4,0"
            Background="Transparent"
            BorderBrush="Transparent"
            IsEnabled="True"
            ToolTip="Click to goto the last page in the PDF Document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M0.69400204,0.0059965644 L9.0010006,8.0220015 0.72097958,16.012997 0.026977501,15.292996 7.5600173,8.0220015 0,0.72599783 z M10.998004,0 L11.998004,0 11.998004,16 10.998004,16 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <Rectangle
            Width="1.6"
            Height="21.599"
            Margin="4,0,4,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.338,0.5" EndPoint="0.662,0.5">
                    <GradientStop Offset="0.508" Color="#FFBCBCBC" />
                    <GradientStop Offset="0.525" Color="White" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Name="btnZoomIn"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            BorderThickness="0"
            Background="Transparent"
            BorderBrush="Transparent"
            IsEnabled="True"
            ToolTip="Click to increase the magnification of the entire document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M7.5350111,4.500005 L8.5350113,4.500005 8.5350113,7.5000053 11.534998,7.5000053 11.534998,8.5000052 8.5350113,8.5000052 8.5350113,11.500005 7.5350111,11.500005 7.5350111,8.5000052 4.5349984,8.5000052 4.5349984,7.5000053 7.5350111,7.5000053 z M8.0360043,1 C4.1570021,1 1.0000002,4.1399999 1.0000002,7.9999998 1.0000002,11.86 4.1570021,15 8.0360043,15 11.915007,15 15.072009,11.86 15.072009,7.9999998 15.072009,4.1399999 11.915007,1 8.0360043,1 z M8.0360043,0 C12.467007,0 16.072009,3.5889997 16.072009,7.9999998 16.072009,12.411 12.467007,16 8.0360043,16 3.6050018,16 0,12.411 0,7.9999998 0,3.5889997 3.6050018,0 8.0360043,0 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <Button
            Name="btnZoomOut"
            Width="24"
            Height="24"
            Margin="4,0,4,0"
            BorderThickness="0"
            Background="Transparent"
            BorderBrush="Transparent"
            IsEnabled="True"
            ToolTip="Click to decrease the magnification of the entire document"
            ToolTipService.ShowOnDisabled="True">
            <Path
                Data="M4.5349984,7.5000053 L11.534998,7.5000053 11.534998,8.5000052 4.5349984,8.5000052 z M8.0360043,1 C4.1570021,1 1.0000002,4.1399999 1.0000002,7.9999998 1.0000002,11.86 4.1570021,15 8.0360043,15 11.915007,15 15.072009,11.86 15.072009,7.9999998 15.072009,4.1399999 11.915007,1 8.0360043,1 z M8.0360043,0 C12.467007,0 16.072009,3.5889997 16.072009,7.9999998 16.072009,12.411 12.467007,16 8.0360043,16 3.6050018,16 0,12.411 0,7.9999998 0,3.5889997 3.6050018,0 8.0360043,0 z"
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                />
        </Button>
        <ComboBox
            Name="cmbCurrentZoomLevel"
            Width="68"
            Height="22"
            Margin="4,0,4,0"
            VerticalAlignment="Center"
            IsEditable="True"
            SelectedIndex="2"
            Text="100%">
            <ComboBoxItem>50%</ComboBoxItem>
            <ComboBoxItem>75%</ComboBoxItem>
            <ComboBoxItem>100%</ComboBoxItem>
            <ComboBoxItem>125%</ComboBoxItem>
            <ComboBoxItem>150%</ComboBoxItem>
            <ComboBoxItem>200%</ComboBoxItem>
            <ComboBoxItem>400%</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</UserControl>
