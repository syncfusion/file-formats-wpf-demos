<syncfusion:ChromelessWindow
    x:Class="syncfusion.pdfviewerdemos.wpf.ExportAsImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:syncfusion.pdfviewerdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Export as Image"
    Width="320"
    Height="344"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="SingleBorderWindow">
    <Window.DataContext>
        <local:ExportAsImageViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image
            Name="image1"
            Grid.Row="0"
            Height="82"
            VerticalAlignment="Top"
            Source="/syncfusion.pdfviewerdemos.wpf;component/Assets/pdfviewer/pdf_header.png" />
        <TextBlock
            Grid.Row="1"
            Margin="3"
            Padding="12px"
            TextWrapping="Wrap">
            Essential PDF Viewer supports exporting of PDF pages as raster image. Click the button to Export all or selected pages in PNG format.
        </TextBlock>
        <GroupBox
            Grid.Row="2"
            Margin="25,10,25,0"
            Padding="8px"
            VerticalAlignment="Center"
            Header="Page Range">
            <StackPanel Height="60" Width="240" >
                <RadioButton
                    x:Name="allRadioBtn"
                    Margin="10,10,2,0"
                    HorizontalAlignment="Left"
                    Content="All"
                    GroupName="pageRange"
                    IsChecked="True" />
                <StackPanel
                    Margin="10,10,2,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <RadioButton
                        x:Name="rangeRadioButton"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Pages:"
                        GroupName="pageRange" />
                    <StackPanel x:Name="rangeStackPanel" Orientation="Horizontal">
                        <TextBlock
                            x:Name="TextFrom"
                            Margin="20,0,2,0"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding ElementName=rangeRadioButton, Path=IsChecked}"
                            Text="From: " />
                        <ComboBox
                            x:Name="comboBoxFrom"
                            Width="40"
                            Height="20"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding ElementName=rangeRadioButton, Path=IsChecked}"
                            ItemsSource="{Binding PageNumbers}"
                            SelectedItem="{Binding StartPageNumber}" />
                        <TextBlock
                            x:Name="TextTo"
                            Margin="5,0,2,0"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding ElementName=rangeRadioButton, Path=IsChecked}"
                            Text="To: " />
                        <ComboBox
                            x:Name="comboBoxTo"
                            Width="40"
                            Height="20"
                            IsEnabled="{Binding ElementName=rangeRadioButton, Path=IsChecked}"
                            ItemsSource="{Binding PageNumbers}"
                            SelectedItem="{Binding EndPageNumber}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <StackPanel
            Grid.Row="3"
            Margin="0,13,20,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Height="20"
                Width="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding ExportCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">Export</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow>
